.plate {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: white;
  border-bottom: 0.5px solid #f2f2f2;
  width: 100vw;
}

.plate .text {
  width: 188rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.plate-bg1 {
  background-color: #007bff;
  color: #fff;
  border: 1px solid #007bff;
  padding: 5rpx 10rpx;
  box-shadow: inset 0.5px 0.5px 0 #ffffff, inset -0.5px -0.5px 0 #ffffff, inset 0.5px -0.5px 0 #ffffff, inset -0.5px 0.5px 0 #ffffff;
  border-radius: 5rpx;
  display: inline-block;
}

.plate-bg2 {
  background: linear-gradient(to bottom, #fff, #28a745);
  color: #000;
  border: 1px solid #28a745;
  padding: 5rpx 10rpx;
  box-shadow: inset 0.5px 0.5px 0 #000000, inset -0.5px -0.5px 0 #000000, inset 0.5px -0.5px 0 #000000, inset -0.5px 0.5px 0 #000000;
  border-radius: 5rpx;
  display: inline-block;
}